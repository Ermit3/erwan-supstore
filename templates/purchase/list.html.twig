{% extends 'base.html.twig' %}

{# {% form_theme formView 'bootstrap_5_layout.html.twig' %} #}

{% block title %}Création produit
{% endblock %}

{% block navbar %}
	{% include "shared/_navbar.html.twig" with {'mode':'light'} %}
{% endblock %}

{% block carousel %}{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col">
				<h1 class="pt-5">Mes commandes</h1>
				<table class="table table-sm table-hover">
					<thead class="table-light">
						<tr>
							<th scope="col">#</th>
							<th scope="col">Adresse</th>
							<th scope="col">Date</th>
							<th scope="col">Produits</th>
							<th scope="col">Total</th>
						</tr>
					</thead>

					<tbody>
						{% for p in purchases %}
							<tr>
								<td scope="row">{{ p.id }}</td>
								<td>
									{{ p.address }}
									<br>
									{{ p.postalCode }},
									{{ p.city }}
								</td>
								<td>{{ p.createdAt | date('d/m/Y H:i') }}</td>
								<td>
									<ul>
										{% for item in p.purchaseItems %}
											<li>{{item.quantity}}x
												{{item.productName}}
												({{item.total / 100}}
												€)
											</li>
										{% endfor %}
									</ul>
								</td>
								<td>{{ p.total / 100}}
									€</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
